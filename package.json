{
  "name": "clipprompt",
  "displayName": "ClipPrompt",
  "description": "have snippets of your code in a single prompt, without manual copy-pasting",
  "version": "0.0.2",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozgunozerk/clipprompt"
  },
  "license": "Apache-2.0",
  "publisher": "ozgunozerk",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addSelectionToPrompt",
        "title": "Add Selection to Prompt"
      },
      {
        "command": "extension.copyAndClearPrompt",
        "title": "Copy & Clear the Prompt"
      }
    ],
    "keybindings": [
      {
        "command": "extension.addSelectionToPrompt",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus",
        "title": "Add Selection to Prompt"
      },
      {
        "command": "extension.copyAndClearPrompt",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus",
        "title": "Copy & Clear the Prompt"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.addSelectionToPrompt",
          "when": "editorHasSelection"
        },
        {
          "command": "extension.copyAndClearPrompt"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
